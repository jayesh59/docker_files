{
    "name": "ubuntuGUI",
    "image": "ubuntu:gui",
    "containerEnv": {
      // for normal operation
      // "DISPLAY":"${localEnv:DISPLAY}"
      
      //for remote docker x11
      "DISPLAY":":0",
      "XAUTHORITY":"/tmp/.Xauthority"
    },
  
    //for remote docker x11
    "runArgs": ["--hostname=xterm"],
    
    //for normal operation
    // "runArgs": ["--hostname=en4113965l"],
    
    "mounts": [
      //for normal operation
      // "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
      // "source=${localEnv:HOME}/.Xauthority,target=/root/.Xauthority,type=bind,consistency=cached",
      
      //for remote docker x11
      "source=${localEnv:HOME}/display/socket,target=/tmp/.X11-unix,type=bind,consistency=cached",
      "source=${localEnv:HOME}/display/Xauthority,target=/tmp/.Xauthority,type=bind,consistency=cached"
    ],

// for docker compose file (not recommended for now)
    // "dockerComposeFile":"docker-compose.yml",
    // "service": "pybullet",
    // "workspaceFolder": "/",
    // "shutdownAction": "stopCompose",

    "customizations": {
      "vscode": {
        // "settings": {
        //   "terminal.integrated.defaultProfile.linux": "bash"
        // },
        "extensions": [
          "ms-python.python",
          "ms-vscode.cpptools",
          "Gruntfuggly.todo-tree"
          ]
      }
    },
  
    "forwardPorts": [3000]
  }